<h1 class="text-center"> Restaurants </h1>

<div class="row">
  <% @restaurants.each do |restaurant| %>

    <div class="col-xs-12 col-md-4">
      <div  class="card-resto" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://lorempixel.com/300/200?<%= rand(100) %>');">
        <h4 class="text-center"><%= restaurant.name %></h4>
        <p class="text-center"><i class="fa fa-phone"></i><smal><%= restaurant.phone_number %></small></p>
        <p class="text-center">
          <%= link_to "See", restaurant_path(restaurant), class: "btn btn-primary btn-xs" %>
          <%= link_to "Rate", new_restaurant_review_path(restaurant), class: "btn btn-success btn-xs" %>
        </p>
      </div>
    </div>
  <% end %>

</div>
